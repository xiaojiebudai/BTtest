<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#d4145a"
    android:layout_margin="5dp"
    >

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/switch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Name:" 
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/switch_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/switch_name"
        android:layout_marginLeft="10dp"
        android:text="MAC:" />

    <TextView
        android:id="@+id/switch_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/switch_mac"
        android:layout_marginLeft="10dp"
        android:text="rssi:-50db" 
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/switch_type113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch_rssi"
        android:layout_centerHorizontal="true"
        android:text="type:switch"
        android:textSize="12dp" 
        android:layout_marginBottom="10dp"
        />


</RelativeLayout>